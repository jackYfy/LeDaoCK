            android:id="@+id/main_menu_head_userimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/user_info"
            android:layout_gravity="center"
            app:border_width="2dp"
            app:border_color="@color/white"
            />
