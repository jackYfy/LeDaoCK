<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context="com.zk.taxi.ui.CallCar.TaxiPayActivity">
   <include layout="@layout/tool_bar"/>

    <!--司机车辆信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">


        <com.zk.taxi.view.CircleImageView
            android:id="@+id/taxi_pay_userimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/driver_img"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            app:border_width="2dp"
            app:border_color="@color/white"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/taxi_pay_userimage"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/taxi_pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text="司机呢称"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/taxi_pay_taxiId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:text="粤E-3452"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/taxi_pay_taxiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:text="白色 车品牌车型"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/taxi_pay_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone_img1"
                android:layout_gravity="center_horizontal"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/ababab"
                android:layout_gravity="center_horizontal"
                android:text="司机电话"/>
        </LinearLayout>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="支付车费"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="按计价器显示金额输入"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"/>
        <!--输入金额-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/feed_backbg">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/inputmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="请输入金额"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:id="@+id/taxi_pay_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/ababab"
                android:background="@null"
                android:gravity="left|top"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:layout_toLeftOf="@+id/yuan"
                android:layout_toRightOf="@+id/inputmoney"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="40dp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="元"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>
         </RelativeLayout>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示：如果有过路费或停车费，可以填写在下面"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            />
        <!--过路费-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@color/background">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="过路费"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:id="@+id/tolls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/ababab"
                android:background="@null"
                android:hint="请输入金额"
                android:gravity="left|top"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:layout_toLeftOf="@+id/yuan1"
                android:layout_marginRight="20dp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/yuan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="元"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>
        </RelativeLayout>
        <!--停车费-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:background="@color/background">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="停车费"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:id="@+id/parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/ababab"
                android:background="@null"
                android:gravity="left|top"
                android:hint="请输入金额"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:layout_toLeftOf="@+id/yuan2"
                android:layout_marginRight="20dp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/yuan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="元"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>
        </RelativeLayout>
        <!--总金额-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/submit_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="总金额"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="支付方式"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"/>
<!--微信支付-->
        <LinearLayout
            android:id="@+id/weixinpay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/pay_bg"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/weixin_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:background="@drawable/weixinpay_img"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/weixin_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/pay_txbg"
                android:duplicateParentState="true"
                android:text="微信支付"/>
            </LinearLayout>
        <!--支付宝-->
        <LinearLayout
            android:id="@+id/alipay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/pay_bg">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ali_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:background="@drawable/alipay_img"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/ali_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/pay_txbg"
                android:textSize="14sp"
                android:text="支付宝支付"/>
        </LinearLayout>
        <!--银行卡-->
        <LinearLayout
            android:id="@+id/bankpay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/pay_bg"
            android:visibility="gone">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/bank_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:background="@drawable/bankpay_img"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/bank_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/pay_txbg"
                android:textSize="14sp"
                android:text="银行卡支付"/>
        </LinearLayout>
        <!--现金-->
        <LinearLayout
            android:id="@+id/cashpay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/pay_bg"
            android:visibility="gone">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/cash_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:background="@drawable/cashpay_img"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/cash_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/pay_txbg"
                android:textSize="14sp"
                android:text="现金支付"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
