<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context="com.zk.taxi.ui.SettingUI.ContactUsActivity">
<include layout="@layout/tool_bar"/>

    <RelativeLayout
        android:id="@+id/phone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/white">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/gsjtsj_title_color"
            android:text="客服电话"
            android:textSize="16sp"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/to_arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/right_arr"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0757-12345678"
            android:textSize="16sp"
            android:textColor="@color/account_agree"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/to_arr"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chat"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/white">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/gsjtsj_title_color"
            android:text="微信公众号"
            android:textSize="16sp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="乐道出行"
            android:textSize="16sp"
            android:textColor="@color/account_agree"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
           />
    </RelativeLayout>
    <!--使用帮助-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ababab"/>

    <RelativeLayout
        android:id="@+id/address"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="联系地址"
            android:textColor="@color/gsjtsj_title_color"
            android:textSize="16sp"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="佛山市禅城区轻工三路南方消防电力大厦"
            android:textSize="14sp"
            android:textColor="@color/account_agree"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</LinearLayout>
