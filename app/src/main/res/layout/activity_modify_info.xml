<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.zk.taxi.ui.ModifyInfoActivity">

    <include layout="@layout/tool_bar"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/modify_nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feed_backbg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="填写昵称"
        android:textColorHint="@color/ababab"
        android:textSize="16sp"
        android:padding="10dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/modify_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feed_backbg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="填写性别"
        android:textSize="16sp"
        android:textColorHint="@color/ababab"
        android:padding="10dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="真实姓名"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/modify_truename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feed_backbg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="填写真实姓名"
        android:textSize="16sp"
        android:textColorHint="@color/ababab"
        android:padding="10dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓氏"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/modify_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feed_backbg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="填写姓氏"
        android:textSize="16sp"
        android:textColorHint="@color/ababab"
        android:padding="10dp"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/modify_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="提交"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/gray"
        android:layout_marginTop="40dp"/>
</LinearLayout>
