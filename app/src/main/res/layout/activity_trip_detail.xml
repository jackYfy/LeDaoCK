<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context="com.zk.taxi.ui.CallCar.TripDetailActivity">
<include layout="@layout/tool_bar"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/this_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="本次订单"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/this_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/this_order"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text="1000011"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/this_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:text="2017-12-9"/>
        <!--<android.support.v7.widget.AppCompatTextView
            android:id="@+id/this_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:text="12:30"/>-->
       </LinearLayout>
        </RelativeLayout>
<!--司机车辆信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/background">


        <com.zk.taxi.view.CircleImageView
            android:id="@+id/main_menu_head_userimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/driver_img"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            app:border_width="2dp"
            app:border_color="@color/white"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/main_menu_head_userimage"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/this_order_drivername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text="司机呢称"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/this_order_carnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:text="粤E-3452"/>
            <!--<android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:text="白色 车品牌车型"/>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/this_order_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone_img"
                android:layout_gravity="center_horizontal"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:text="司机电话"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/ababab"/>
    <!--订单地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/background"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/st_img"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"/>

                <View
                    android:background="@drawable/line"
                    android:layout_centerInParent="true"
                    android:layerType="software"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ed_img"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/this_order_staddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="南方消防电力大厦sssssssssddddd"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/this_order_edaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="南方消防电力大厦sssssssssssssssssss"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/this_order_cancelorder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/side_line"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:text="取消订单"/>
        <View android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/side_line"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="在线客服"/>
        </LinearLayout>
</LinearLayout>
