<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zk.taxi.ui.MainActivity">

        <!--地图布局-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.amap.api.maps.MapView
                    android:id="@+id/main_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:enabled="true">
                </com.amap.api.maps.MapView>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@mipmap/topbg"
                    >
                    <TextView
                        android:id="@+id/apptitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:text="乐道"
                        android:textColor="@color/red"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/appcity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:clickable="true"
                        android:text="佛山市"
                        android:drawableRight="@mipmap/go_down"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />
                </android.support.v7.widget.Toolbar>
                <LinearLayout
                    android:id="@+id/tab_meun"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@mipmap/carselectbg"
                    android:layout_below="@+id/main_toolbar"
                    android:orientation="vertical">
                    <android.support.design.widget.TabLayout
                        android:id="@+id/plan_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:layout_marginLeft="10dp"
                        app:tabMode="fixed"
                        app:tabTextColor="@color/gsjtsj_title_color"
                        app:tabIndicatorColor="@color/white"
                        app:tabIndicatorHeight="0dp"
                        app:tabSelectedTextColor="@color/red"
                        >
                    </android.support.design.widget.TabLayout>
                </LinearLayout>
                <!--确认屏幕中心点-->
                <LinearLayout
                    android:id="@+id/main_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"/>
                <!--让图标在中心点上，图片的最下位置就是中兴点位置-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/main_center"
                    android:layout_centerHorizontal="true">

                <ImageView
                        android:id="@+id/taxi_location_mark_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/loc2"
                        android:layout_centerInParent="true"/>
                </LinearLayout>
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/meun_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_below="@+id/tab_meun"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/loc"/>
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_above="@+id/taxi_info"
                    android:padding="4dp"
                    android:background="@drawable/changebt"
                    android:visibility="gone">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/real_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:textColor="@color/news_color1"
                        android:background="@drawable/tab_background_selected"
                        android:text="实时"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/appoint_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:textColor="@color/ababab"
                        android:background="@drawable/tab_background_unselected"
                        android:text="预约"/>

                    </LinearLayout>
                <RelativeLayout
                    android:id="@+id/forecast"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_above="@+id/taxi_info"
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    >
                  <android.support.v7.widget.AppCompatTextView
                      android:id="@+id/forecast_km"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:textSize="12sp"
                      android:text="预估里程："/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/forecast_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:text="预估时间："/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/forecast_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="12sp"
                        android:text="预估费用："/>
                </RelativeLayout>
                <!--地址输入-->
                <LinearLayout
                    android:id="@+id/taxi_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_above="@+id/call_car"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_shadow"
                    >
                        <RelativeLayout
                            android:id="@+id/staddress"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/st_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:background="@mipmap/st_img"
                                />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/startAd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/news_color1"
                                android:layout_toRightOf="@+id/st_address"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/ababab"
                            android:layout_marginLeft="30dp"/>
                        <RelativeLayout
                            android:id="@+id/edaddress"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/ed_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:background="@mipmap/ed_img"
                                />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/endAd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="您准备去哪儿"
                                android:textColor="@color/news_color1"
                                android:layout_toRightOf="@+id/ed_address"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                />
                        </RelativeLayout>

                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/call_car"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="确认召车"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/red"/>
            </RelativeLayout>
        </FrameLayout>

</LinearLayout>
